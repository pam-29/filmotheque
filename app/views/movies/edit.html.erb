<% content_for :title, "Modifier le film" %>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1 class="mb-4">Modifier le film</h1>
            <div class="mb-3">
                <%= render "form", movie: @movie %>
            </div>
            <div class="d-flex gap-2">
                <%= link_to "Voir le film", @movie, class: "btn btn-primary flex-fill" %>
                <%= link_to "Revenir aux films", movies_path, class: "btn btn-secondary flex-fill" %>
            </div>
        </div>
    </div>
</div>
